<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apress.gerber.dnd.ClassAbilitiesListActivity">

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:id="@+id/menuLayout"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="40sp">

            <ImageView
                android:contentDescription="@string/decorativeImage"
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_rew"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/ActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:text=""
                android:layout_marginLeft="6sp"
                android:layout_marginStart="6sp"
                android:layout_marginRight="3sp"
                android:layout_marginEnd="3sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/holo_purple"
                android:gravity="center_vertical"/>

            <ImageView
                android:contentDescription="@string/decorativeImage"
                android:layout_width="40sp"
                android:layout_height="60sp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_ff"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>


        <ScrollView
            android:id="@+id/scrollId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/menuLayout">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="25sp"
                    android:text= "@string/ClassAbilityListTitle"/>

                <Button
                    android:id="@+id/abilityButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton1"/>

                <Button
                    android:id="@+id/abilityButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton1"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton2"/>


                <Button
                    android:id="@+id/abilityButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton2"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton3"/>

                <Button
                    android:id="@+id/abilityButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton3"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton4"/>

                <Button
                    android:id="@+id/abilityButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton4"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton5"/>

                <Button
                    android:id="@+id/abilityButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton5"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton6"/>

                <Button
                    android:id="@+id/abilityButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton6"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton7"/>

                <Button
                    android:id="@+id/abilityButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton7"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton8"/>

                <Button
                    android:id="@+id/abilityButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton8"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton9"/>

                <Button
                    android:id="@+id/abilityButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton9"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton10"/>

                <Button
                    android:id="@+id/abilityButton11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton10"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton11"/>

                <Button
                    android:id="@+id/abilityButton12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton11"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton12"/>

                <Button
                    android:id="@+id/abilityButton13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton12"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton13"/>


                <Button
                    android:id="@+id/abilityButton14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton13"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton14"/>


                <Button
                    android:id="@+id/abilityButton15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton14"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton15"/>


                <Button
                    android:id="@+id/abilityButton16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton15"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton16"/>

                <Button
                    android:id="@+id/abilityButton17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityButton16"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15sp"
                    android:onClick="onAbilityButton17"/>


                <TextView
                    android:id="@+id/ClassSchoolsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_marginTop="25sp"
                    android:layout_below="@+id/abilityButton17"
                    android:text= "@string/ClassSchoolsTitle"/>

                <TextView
                    android:id="@+id/ClassSchoolsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_below="@+id/ClassSchoolsTitle"
                    android:text= "@string/ClassSchoolsTitle"/>

                <TextView
                    android:id="@+id/ClassSchoolsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_below="@+id/ClassSchoolsTitle"
                    android:text= "@string/ClassSchoolsTitle"/>

                <TextView
                    android:id="@+id/ClassSchoolsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_below="@+id/ClassSchoolsTitle"
                    android:text= "@string/ClassSchoolsTitle"/>

                <TextView
                    android:id="@+id/ClassSchoolsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_below="@+id/ClassSchoolsTitle"
                    android:text= "@string/ClassSchoolsTitle"/>




                <Button
                    android:id="@+id/abilityCassSchoolButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ClassSchoolsDescription"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityButton17"/>

                <Button
                    android:id="@+id/abilityCassSchoolButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityCassSchoolButton1"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityClassSchoolButton1"/>

                <Button
                    android:id="@+id/abilityCassSchoolButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityCassSchoolButton2"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityClassSchoolButton3"/>

                <Button
                    android:id="@+id/abilityCassSchoolButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityCassSchoolButton3"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityClassSchoolButton4"/>

                <Button
                    android:id="@+id/abilityCassSchoolButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityCassSchoolButton4"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityClassSchoolButton5"/>

                <Button
                    android:id="@+id/abilityCassSchoolButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityCassSchoolButton5"
                    android:layout_centerHorizontal="true"
                    android:onClick="onAbilityClassSchoolButton6"/>

                <Button
                    android:id="@+id/abilityCassSchoolButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abilityCassSchoolButton6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="75sp"
                    android:onClick="onAbilityClassSchoolButton7"
                    />




                <Button
                    android:id="@+id/chooseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp"
                    android:text="@string/selectButton"
                    android:onClick="onChooseButtonclick"/>

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="onNextButton"
                    android:src="@android:drawable/ic_menu_edit"
                    android:text="@string/nextClassButton"/>

                <Button
                    android:id="@+id/previousButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="onPreviousButton"
                    android:src="@android:drawable/ic_menu_edit"
                    android:text="@string/previousClassButton"/>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
